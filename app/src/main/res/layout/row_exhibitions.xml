<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyt_row_exhibition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:textColor="@color/color_text"
        android:textSize="@dimen/textSizeNormal" />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:textColor="@color/color_text"
        android:textSize="@dimen/textSizeNormal" />

    <TextView
        android:id="@+id/txt_location"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:textColor="@color/color_text"
        android:textSize="@dimen/textSizeNormal" />


    <RadioButton
        android:id="@+id/rdb_yescamara_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:buttonTint="@color/colorShapeButtonInit"
        android:textColor="@color/color_text" />

    <RadioButton
        android:id="@+id/rdb_nocamara_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:buttonTint="@color/colorShapeButtonInit"
        android:textColor="@color/color_text" />

    <TextView
        android:id="@+id/txt_num_photos"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_action_camera"
        android:gravity="center"
        android:textColor="@color/color_text"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/img_delete_exhibition"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:src="@drawable/ic_delete" />

</LinearLayout>