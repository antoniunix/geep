<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:background="@null"
    android:backgroundTint="@color/color_withe"
    android:orientation="horizontal">

    <View
        android:id="@+id/view"
        android:layout_width="4dp"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_withe"
        android:paddingLeft="4dp">

        <TextView
            android:id="@+id/txtDistance"
            style="@style/styleSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtScore"
            style="@style/styleSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="11sp" />


        <TextView
            android:id="@+id/txtNomPdv"
            style="@style/styleSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDistance"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txtNomCliente"
            style="@style/styleSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNomPdv"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txtDate"
            style="@style/styleSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNomCliente"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txtLabelInit"
            style="@style/styleSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDate"
            android:text="INICIO"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txtInit"
            style="@style/styleSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDate"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@id/txtLabelInit"
            android:textSize="11sp" />


        <TextView
            android:id="@+id/txtEnd"
            style="@style/styleSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txtDate"
            android:layout_marginRight="4dp"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txtLabelEnd"
            style="@style/styleSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDate"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/txtEnd"
            android:text="FIN"
            android:textSize="11sp" />

        <RelativeLayout
            android:id="@+id/lnyQualif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtLabelInit"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:background="@color/colorgrayTaskRow"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNumTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/txtLabelTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@id/txtNumTask"
                android:text="TAREAS"
                android:textColor="@color/color_black"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txtPorcent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="8dp"
                android:background="@drawable/shape_circle"
                android:gravity="center"
                android:minHeight="30dp"
                android:minWidth="30dp"
                android:text="0%"
                android:textColor="@color/color_withe"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/txtPorcent"
                android:textColor="@color/color_black"
                android:textSize="11sp" />


        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>